@{
    ViewData["Title"] = "CustomerListGetByCity";
    Layout = "~/Views/Layout/Index.cshtml";
}



<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Müşteri varmı</h4>

                <form asp-action="CustomerListGetByCity" class="forms-sample" method="get">
                    <div class="form-group">
                        <label for="exampleInputName1">Şehir Adı Giriniz</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Şehir Adını Yazınız" name="city" required>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Bul</button>
                </form>
                <br />
                <div class="ti-alert alert-success">@ViewBag.message</div>
            </div>
        </div>
    </div>
</div>

