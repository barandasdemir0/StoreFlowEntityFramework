@model List<Message>
@{
    ViewData["Title"] = "MessageList";
    Layout = "~/Views/Layout/Index.cshtml";
}







<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Mesaj Listesi</h4>
                <p class="card-description">
                    <code>Mesaj İle İşlemlerinizi buradan yapabilirsiniz</code>
                </p>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Gönderen Adı</th>
                                <th>Konu</th>
                                <th>Durum</th>
                                <th>Tarih</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                                <th>Mesajı Aç</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MessageId</td>
                                    <td>@item.SenderNameSurname</td>
                                    <td>@item.MessageTitle</td>
                                    <td>@item.IsRead</td>
                                    <td>@item.DateTime</td>

                                    <td><a href="/Message/MessageDelete/@item.MessageId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Message/MessageUpdate/@item.MessageId" class="btn btn-outline-warning">Güncelle</a></td>
                                    <td><a href="/Message/MessageDetail/@item.MessageId" class="btn btn-outline-info">Detaylar</a></td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <a href="/Message/MessageAdd/" class="btn btn-outline-success">Mesaj Ekle</a>
                </div>
            </div>
        </div>
    </div>

</div>

