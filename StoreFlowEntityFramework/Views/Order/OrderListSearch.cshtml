@model List<Order>
@{
    ViewData["Title"] = "OrderListSearch";
    Layout = "~/Views/Layout/Index.cshtml";
}









<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sipariş Listesi</h4>
                <p class="card-description">
                    <code>Kategori İle İşlemlerinizi buradan yapabilirsiniz</code>
                </p>
                <div class="table-responsive">
                    <h2>Duruma Göre Arama İşlemi</h2>
                    <form asp-action="OrderListSearch" method="get">

                        <input type="text" name="name" placeholder="örnek : taşıma durumunda" class="form-control " />








                        <label>Filtre Tipi</label>
                        <select name="filterType" class="form-control">
                            <option value="start">Bu harflerle Başlıyorsa</option>
                            <option value="end">Bu harflerle bitiyorsa</option>
                        </select>

                        <button type="submit" class="btn btn-outline-success mt-2">Ara</button>


                    </form>
                    <br />

                    <table class="table">
                        <thead>
                            <tr>

                                <th>Ürün Adı</th>
                                <th>Müşteri</th>
                                <th>Sipariş</th>
                                <th>Birim Fiyat</th>
                                <th>Toplam Fiyat</th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.OrderId</td>
                                    <td>@item.ProductId</td>
                                    <td>@item.CustomerId </td>
                                    <td>@item.UnitPrice TL</td>
                                    <td>@item.TotalPrice</td>
                                    <td>@item.Status</td>
                                    <td><a href="/Order/OrderDelete/@item.OrderId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Order/OrderUpdate/@item.OrderId" class="btn btn-outline-warning">Güncelle</a></td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <a href="/Order/OrderAdd/" class="btn btn-outline-success">sipariş Ekle</a>
                </div>
            </div>
        </div>
    </div>

</div>





