@model List<Order>
@{
    ViewData["Title"] = "OrderListAsync2";
    Layout = "~/Views/Layout/Index.cshtml";
}



<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Asenkron Sipariş Listesi</h4>
                <p class="card-description">
                    <code>Kategori İle İşlemlerinizi buradan yapabilirsiniz</code>
                </p>
                <div class="table-responsive">

                    <br />

                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ürün Adı</th>
                                <th>Müşteri</th>
                                <th>Ürün Adedi</th>
                                <th>Birim Fiyat</th>
                                <th>Toplam Fiyat</th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.OrderId</td>
                                    <td>@item.Product.ProductName</td>
                                    <td>@item.Customer.CustomerName @item.Customer.CustomerSurname </td>
                                    <td>@item.OrderCount </td>
                                    <td>@item.UnitPrice </td>       
                                    <td>@item.TotalPrice</td>
                                    <td>@item.Status</td>
                                    <td><a href="/Order/DeleteOrder/@item.OrderId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Order/UpdateOrder/@item.OrderId" class="btn btn-outline-warning">Güncelle</a></td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <a href="/Order/CreateOrder/" class="btn btn-outline-success">sipariş Ekle</a>
                </div>
            </div>
        </div>
    </div>

</div>







