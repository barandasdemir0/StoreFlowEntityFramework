@model List< ProductWithCategoryViewModel>
@{
    ViewData["Title"] = "ProductListWithCategory";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Ürün Listesi</h4>
                <p class="card-description">
                    <code>Ürün listesi Kategori İle İşlemlerinizi buradan yapabilirsiniz</code>
                </p>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
         
                                <th>Ürün Adı</th>
                                <th>Stok Sayısı</th>
                                <th>Kategori Adı</th>
                     
                           
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
         
                                    <td>@item.ProductName</td>
                                    <td>@item.ProductStock </td>
                                    <td>@item.CategoryName</td>
 

                                 
                                </tr>
                            }


                        </tbody>
                    </table>
                  
                </div>
            </div>
        </div>
    </div>

</div>

