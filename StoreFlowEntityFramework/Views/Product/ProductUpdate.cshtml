@model Product
@{
    ViewData["Title"] = "ProductUpdate";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Ürün Ekleme</h4>

             

                @using (Html.BeginForm("ProductUpdate", "Product", FormMethod.Post))
                {
                    @Html.HiddenFor(x => x.ProductId)
                    <div class="form-group">
                        <label for="exampleInputName1">Ürün Adı</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Ürün Adını Yazınız" asp-for="ProductName">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Ürün Fiyatı</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Ürün Fiyatı Yazınız" asp-for="ProductPrice">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Kategori Seçiniz</label>
                        <select asp-for="CategoryId" asp-items="@ViewBag.categoryList" class="form-control">
                            <option>-- Kategori Seçiniz --</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Stok Sayısı</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Stok Sayısı Yazınız" asp-for="ProductStock">
                    </div>


                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                }
            </div>
        </div>
    </div>
</div>